<%= simple_form_for @work do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :description %>
  <%= f.input :media_format, collection: Work::MEDIA_FORMATS, include_blank: false %>
  <%= f.input :publisher %>
  <%= f.input :published_on %>
  <%= f.association :location %>

  <%= f.submit %>
<% end %>
